<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Turist in Banat</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--Lightbox for popup images-->
    <link href="~/Content/lightbox.css" rel="stylesheet" />

</head>

<body>

    <!--Navigation bar partial view-->
    @*@Html.Partial("_NavBar")*@

    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Acasa", "Index", "Home")</li>
                    <li>@Html.ActionLink("Recomandarile noastre", "Recommendations", "Home")</li>
                    <li>@Html.ActionLink("Contacteaza-ne", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Despre noi", "About", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Inregistrare", "RegisterTurist", "Account")</li>
                    <li>@Html.ActionLink("Autentificare", "LoginTurist", "Account")</li>
                </ul>

            </div>
        </div>
    </div>
   

    <div style="padding: 7px">
        <img src="~/Content/Images/_bannerTurist.png" class="img-responsive" />
    </div>


<div class="panel panel-body">
        <div class="col-md-2">
            <!--Partial view ptr meniul vertical stanga-->
            @Html.Partial("_SideMenu")
        </div>

        <div class="col-md-10">

            <div>
                @RenderBody()
            </div>

        </div>
    </div>
    @*<hr />*@
    <div class="container body-content">
        <footer>
            <p>&copy; @DateTime.Now.Year - Turist in Banat by Ionut Guruian</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)

    <!--Lightbox for popup images-->
    <script src="~/Scripts/lightbox-2.6.js"></script>
</body>
</html>